<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="connection.datasource">java:/pizzaplaneta-DS</property>
        <property name="hibernate.current_session_context_class">thread</property>
        <mapping class="cl.pizzaplaneta.modelos.Venta"/>
        <mapping class="cl.pizzaplaneta.modelos.Producto"/> 
        <mapping class="cl.pizzaplaneta.modelos.Cliente"/>
        <mapping class="cl.pizzaplaneta.modelos.VentaDetalle"/>      
    </session-factory>  
</hibernate-configuration>